var TIMEOUT = 0;

var ph = {};

//====================================================================================================================
function Execute() {
	clearMessage();
	document.getElementById('result').innerHTML = "";
	
	if(document.form.find.value.length == 0) {
		alert('������������w�肵�Ă�������');
		return;
	}

	if(url.match(/^[^\/]+\/\/[\/\\]{2}/))
		if(!confirm("�c�[���̎��s�p�X�Ƀl�b�g���[�N�p�X���w�肳��Ă��邽�߃t�@�C���̐������l�b�g���[�N�x�����������܂��B\n"
			+ "�c�[�������[�J���f�B�X�N�ɃR�s�[���Ď��s���邱�Ƃ��������߂��܂��B\n���s���Ă���낵���ł����H"))
			return;

	ph.files   = [];
	ph.count   = {};
	ph.Folders = [fileField.path.value];
	ph.flag    = document.form.subfolder.checked;
	try {
		ph.reg     = new RegExp(document.form.find.value);
	} catch(e) {
		alert('����������̐��K�\���������ł�');
